{
    "name": "react-typescript-boilerplate",
    "version": "1.0.0",
    "description": "A simple react project setup that uses typescript and webpack5.",
    "main": "index.js",
    "scripts": {
        "test": "cross-env NODE_ENV=test jest --watchAll --verbose --coverage",
        "build": "cross-env NODE_ENV=production webpack --config webpack.prod.config.js",
        "start": "cross-env NODE_ENV=development webpack serve --config webpack.dev.config.js --hot",
        "lint": "eslint src",
        "prettier": "prettier --write \"./**/*.{ts,tsx,json}\""
    },
    "author": "V.J.Nadar",
    "license": "ISC",
    "husky": {
        "hooks": {
            "pre-commit": "yarn test && lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [],
        "*.tsx": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.json": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.15.0",
        "@testing-library/jest-dom": "^6.2.1",
        "@testing-library/react": "^14.1.2",
        "@types/enzyme": "^3.10.9",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.11.17",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@types/testing-library__jest-dom": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "autoprefixer": "^10.4.17",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.1.3",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "clean-webpack-plugin": "^4.0.0-alpha.0",
        "colors": "^1.4.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.2.0",
        "eslint": "^8.56.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^27.6.3",
        "eslint-plugin-jest-dom": "^5.1.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-testing-library": "^6.2.0",
        "file-loader": "^6.2.0",
        "html-loader": "^5.0.0",
        "html-webpack-plugin": "^5.3.2",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "mini-css-extract-plugin": "^2.2.0",
        "msw": "^2.1.6",
        "postcss": "^8.4.35",
        "postcss-loader": "^8.1.0",
        "prettier": "^3.2.5",
        "react-test-renderer": "^18.2.0",
        "sass": "^1.70.0",
        "sass-loader": "^14.0.0",
        "style-loader": "^3.2.1",
        "tailwindcss": "^3.4.1",
        "terser-webpack-plugin": "^5.1.4",
        "ts-jest": "^29.1.2",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "undici": "5.0.0",
        "webpack": "^5.49.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1"
    },
    "dependencies": {
        "axios": "^1.6.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
