{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "browser": true,
        "jest": true
    },
    "rules": {
        "no-console": 0,
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off"
    },
    "ignorePatterns": ["/**/*.d.ts"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
